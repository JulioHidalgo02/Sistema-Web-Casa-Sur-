@model Sistema_Web_Casa_Surá.Entities.LoginObj;
@{
    ViewData["Title"] = "ValidarCrendeciales";
    Layout = "~/Views/Shared/_Auth_Layout.cshtml";
}

<div class="container">
    <div class="row vh-100 d-flex justify-content-center">
        <div class="col-12 align-self-center">
            <div class="row">
                <div class="col-lg-5 mx-auto">
                    <div class="card">
                        <div class="card-body p-0 auth-header-box">
                            <div class="text-center p-3">
                                <a href="index.html" class="logo logo-admin">
                                    <img src="~/images/CASA SURA Logo.png" height="100" alt="logo" class="auth-logo">
                                </a>
                                <h4 class="mt-3 mb-1 font-weight-semibold text-white font-18">Sistema Web Casa Surá</h4>
                                <p class="text-muted  mb-0">Inicia Sesión o Registrate para ingresar al sistema</p>
                            </div>
                        </div>
                        <div class="card-body">
                            <ul class="nav-border nav nav-pills">
                                <li class="nav-item">
                                    <a class="nav-link active font-weight-semibold" href="@Url.Action("ValidarCrendeciales","Login")">Iniciar Sesión</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link font-weight-semibold" href="@Url.Action("RegistroClientes","Login")">Registrarse</a>
                                </li>
                            </ul>
                            <div class="tab-content">
                                @using (Html.BeginForm("ValidarCrendeciales", "Login", FormMethod.Post))
                                {
                                    @Html.Hidden("txtMsj", (string)ViewBag.Msj, new { @class = "form-control" })
                                    <div class="tab-pane active p-3 pt-3" id="LogIn_Tab">
                                        <div class="form-group">
                                            <label for="username">Correo Electrónico</label>
                                            <div class="input-group mb-3">
                                                @Html.TextBoxFor(Model => Model.CORREO, new {@class = "form-control", style="direction:ltr;", required="required"})
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label for="userpassword">Contraseña</label>
                                            <div class="input-group mb-3">
                                                @Html.PasswordFor(Model => Model.CONTRA, new {@class = "form-control", style="direction:ltr;", required="required"})
                                            </div>
                                        </div>

                                        <div class="form-group row mt-4">
                                            <div class="col-sm-6">
                                            </div>
                                            <div class="col-sm-6 text-right">
                                                <a href="@Url.Action("RecuperarContrasenia","Login")" class="text-muted font-13">Olvidó su contraseña? <i class="dripicons-lock"></i> </a>
                                            </div>
                                        </div>

                                        <div class="form-group mb-0 row">
                                            <div class="col-12 mt-2">
                                                <input type="submit" class="btn btn-primary btn-block waves-effect waves-light" value="Iniciar Sesión" />
                                            </div>
                                        </div>

                                    </div>
                                }
                            </div>
                        </div>
                        <div class="card-body bg-light-alt text-center">
                            <span class="text-muted d-none d-sm-inline-block">Sistema Web Casa Surá - 2022</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script>
        $(document).ready(function () {
            let mensaje = document.getElementById("txtMsj").value;
            if (mensaje != "") {
                GenerarMensajes("warning", mensaje);
            }
        });

        function GenerarMensajes(tipo, mensaje) {

            const Toast = Swal.mixin({
                toast: true,
                position: 'top',
                showConfirmButton: false,
                timer: 15000
            });

            Toast.fire({
                icon: tipo,
                title: mensaje
            });
        }
    </script>
}