@model Sistema_Web_Casa_Surá.Entities.LoginObj2;
@{
    ViewData["Title"] = "RecuperarContrasenia";
    Layout = "~/Views/Shared/_Auth_Layout.cshtml";
}

<div class="container">
    <div class="row vh-100 d-flex justify-content-center">
        <div class="col-12 align-self-center">
            <div class="row">
                <div class="col-lg-5 mx-auto">
                    <div class="card">
                        <div class="card-body p-0 auth-header-box">
                            <div class="text-center p-3">
                                <a href="index.html" class="logo logo-admin">
                                    <img src="~/images/CASA SURA Logo.png" height="100" alt="logo" class="auth-logo">
                                </a>
                                <h4 class="mt-3 mb-1 font-weight-semibold text-white font-18">Recuperar Contraseña</h4>
                                <p class="text-muted  mb-0">Ingresa el correo electrónico relacionado al sistema para recuperar la contraseña</p>
                            </div>
                        </div>
                        <div class="card-body">
                            @using (Html.BeginForm("RecuperarContrasenia", "Login", FormMethod.Post))
                                {
                                @Html.Hidden("txtMsj", (string)ViewBag.Msj, new { @class = "form-control" })
                                <div class="form-group">
                                    <label for="username">Correo Electrónico</label>
                                    <div class="input-group mb-3">
                                        @Html.TextBoxFor(Model => Model.CORREO, new {@class = "form-control", style="direction:ltr;", required="required"})
                                    </div>
                                </div><!--end form-group-->

                                <div class="form-group mb-0 row">
                                    <div class="col-12 mt-2">
                                        <input class="btn btn-primary btn-block waves-effect waves-light" type="submit" value="Recuperar Contraseña"/>
                                    </div><!--end col-->
                                </div> <!--end form-group-->
                                }
                            <p class="text-muted mb-0">La recordaste ?  <a href="@Url.Action("ValidarCrendeciales","Login")" class="text-primary ml-2">Inicia Sesión</a></p>
                        </div>
                    </div><!--end card-->
                </div><!--end col-->
            </div><!--end row-->
        </div><!--end col-->
    </div><!--end row-->
</div><!--end container-->
@section Scripts{
    <script>
        $(document).ready(function () {
            let mensaje = document.getElementById("txtMsj").value;
            if (mensaje != "") {
                if (mensaje == "Revise su bandeja de spam") {
                    GenerarMensajes("success", mensaje);
                }else{
                    GenerarMensajes("warning", mensaje);
                }
                
            }
        });

        function GenerarMensajes(tipo, mensaje) {

            const Toast = Swal.mixin({
                toast: true,
                position: 'top',
                showConfirmButton: false,
                timer: 15000
            });

            Toast.fire({
                icon: tipo,
                title: mensaje
            });
        }
    </script>
}
