@model Sistema_Web_Casa_Surá.Entities.LoginObj;
@{
    ViewData["Title"] = "RegistroClientes";
    Layout = "~/Views/Shared/_Auth_Layout.cshtml";
}


<div class="container">
    <div class="row vh-100 d-flex justify-content-center">
        <div class="col-12 align-self-center">
            <div class="row">
                <div class="col-lg-5 mx-auto">
                    <div class="card">
                        <div class="card-body p-0 auth-header-box">
                            <div class="text-center p-3">
                                <a href="index.html" class="logo logo-admin">
                                    <img src="~/images/CASA SURA Logo.png" height="100" alt="logo" class="auth-logo">
                                </a>
                                <h4 class="mt-3 mb-1 font-weight-semibold text-white font-18">Sistema Web Casa Surá</h4>
                                <p class="text-muted  mb-0">Inicia Sesión o Registrate para ingresar al sistema</p>
                            </div>
                        </div>
                        <div class="card-body">
                            <ul class="nav-border nav nav-pills" >
                                <li class="nav-item">
                                    <a class="nav-link  font-weight-semibold"  href="@Url.Action("ValidarCrendeciales","Login")" >Iniciar Sesión</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link active font-weight-semibold"  href="@Url.Action("RegistroClientes","Login")" >Registrarse</a>
                                </li>
                            </ul>
                                <div class="tab-pane px-3 pt-3" id="Register_Tab" >
                                @using (Html.BeginForm("RegistroClientes", "Login", FormMethod.Post))
                                    {
                                    @Html.Hidden("txtMsj", (string)ViewBag.Msj, new { @class = "form-control" })
                                        <div class="form-group">
                                            <label for="username">Cédula de Identidad</label>
                                            <div class="input-group mb-3">
                                            @Html.TextBoxFor(Model => Model.CED, new {@class = "form-control", style="direction:ltr;"})
                                            
                                            </div>
                                        <span asp-validation-for="CED" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label for="username">Nombre</label>
                                            <div class="input-group mb-3">
                                            @Html.TextBoxFor(Model => Model.NOM, new {@class = "form-control", style="direction:ltr;"})
                                            </div>
                                        <span asp-validation-for="NOM" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label for="username">Primer Apellido</label>
                                            <div class="input-group mb-3">
                                            @Html.TextBoxFor(Model => Model.PAPE, new {@class = "form-control", style="direction:ltr;"})
                                            </div>
                                        <span asp-validation-for="PAPE" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label for="username">Segundo Apellido</label>
                                            <div class="input-group mb-3">
                                            @Html.TextBoxFor(Model => Model.SAPE, new {@class = "form-control", style="direction:ltr;"})
                                            </div>
                                        <span asp-validation-for="SAPE" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            <label for="useremail">Correo Electrónico</label>
                                            <div class="input-group mb-3">
                                            @Html.TextBoxFor(Model => Model.CORREO, new {@class = "form-control", style="direction:ltr;"})
                                            </div>
                                        <span asp-validation-for="CORREO" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            <label for="mo_number">Número de Teléfono</label>
                                            <div class="input-group mb-3">
                                            @Html.TextBoxFor(Model => Model.TEL, new {@class = "form-control", style="direction:ltr;"})
                                            </div>
                                        <span asp-validation-for="TEL" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label for="mo_number">Provincia</label>
                                            <div class="input-group mb-3">
                                            @Html.TextBoxFor(Model => Model.PROVINCIA, new {@class = "form-control", style="direction:ltr;"})
                                            </div>
                                        <span asp-validation-for="PROVINCIA" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label for="mo_number">Cantón</label>
                                            <div class="input-group mb-3">
                                            @Html.TextBoxFor(Model => Model.CANTON, new {@class = "form-control", style="direction:ltr;"})
                                            </div>
                                        <span asp-validation-for="CANTON" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label for="mo_number">Distrito</label>
                                            <div class="input-group mb-3">
                                            @Html.TextBoxFor(Model => Model.DISTRITO, new {@class = "form-control", style="direction:ltr;"})
                                            </div>
                                        <span asp-validation-for="DISTRITO" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label for="mo_number">Dirección Exacta</label>
                                            <div class="input-group mb-3">
                                            @Html.TextBoxFor(Model => Model.DIRECCION, new {@class = "form-control", style="direction:ltr;"})
                                            </div>
                                        <span asp-validation-for="DIRECCION" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            <label for="userpassword">Contraseña</label>
                                            <div class="input-group mb-3">
                                            @Html.PasswordFor(Model => Model.CONTRA, new {@class = "form-control", style="direction:ltr;"})
                                            </div>
                                        <span asp-validation-for="CONTRA" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            <label for="conf_password">Confirmar Contraseña</label>
                                            <div class="input-group mb-3">
                                            @Html.PasswordFor(Model => Model.CONTRA2, new {@class = "form-control", style="direction:ltr;"})
                                            </div>
                                        <span asp-validation-for="CONTRA2" class="text-danger"></span>
                                        </div>

                                        <div class="form-group mb-0 row">
                                            <div class="col-12 mt-2">
                                                <input class="btn btn-primary btn-block waves-effect waves-light" type="submit" value="Registrarse " />
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="card-body bg-light-alt text-center">
                            <span class="text-muted d-none d-sm-inline-block">Sistema Web Casa Surá - 2022</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

@section Scripts{
    <script>
        $(document).ready(function () {
            let mensaje = document.getElementById("txtMsj").value;
            if (mensaje != "") {
                if (mensaje == "Usuario Creado Con Éxito") {
                    GenerarMensajes("success", mensaje);
                } else {
                    GenerarMensajes("warning", mensaje);
                }
            }
        });

        function GenerarMensajes(tipo, mensaje) {

            const Toast = Swal.mixin({
                toast: true,
                position: 'top',
                showConfirmButton: false,
                timer: 15000
            });

            Toast.fire({
                icon: tipo,
                title: mensaje
            });
        }
    </script>
}

