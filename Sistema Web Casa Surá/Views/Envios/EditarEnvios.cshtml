@model Sistema_Web_Casa_Surá.Entities.EnviosObj
@{
    ViewData["Title"] = "EditarEnvios";
}
<div class="page-content">
    <div class="container-fluid">
         @using (Html.BeginForm("EditarEnvios", "Envios", FormMethod.Post))
             {
        <div class="card-body">
            <div class="form-group row">
                <label class="col-xl-3 col-lg-3 col-form-label">Número de orden</label>
                <div class="col-lg-9 col-xl-8">
                        @Html.TextAreaFor(m => m.ID, new{@class = "form-control"})
                        <span asp-validation-for="ID" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-xl-3 col-lg-3 col-form-label">Cedula</label>
                    <div class="col-lg-9 col-xl-8">
                        @Html.TextAreaFor(m => m.Cedula, new{@class = "form-control"})
                                <span asp-validation-for="Cedula" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-xl-3 col-lg-3 col-form-label">Número de Rastreo</label>
                <div class="col-lg-9 col-xl-8">

                        @Html.TextAreaFor(m => m.Rastreo, new{@class = "form-control"})
                                <span asp-validation-for="Rastreo" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-xl-3 col-lg-3 col-form-label">Estado</label>
                <div class="col-lg-9 col-xl-8">
                        @Html.TextAreaFor(m => m.Estado, new{@class = "form-control"})
                            <span asp-validation-for="Estado" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-lg-9 col-xl-8 offset-lg-3">
                    <button type="submit" class="btn btn-primary btn-sm">Editar</button>
                    <a href="@Url.Action("VerEnvios","Envios")" type="button" class="btn btn-danger btn-sm">Cancelar</a>
                </div>
            </div>
        </div>
        }
    </div>
</div>